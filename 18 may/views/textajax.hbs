<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
        <script>
            function query()
            {
                let http = new XMLHttpRequest()
                http.onload=function()
                {
                    let jasonobj = JSON.parse(http.response)
                    document.getElementById("p1").innerHTML = `<h3>Message : ${jasonobj.message}</h3>`
                    document.getElementById("p2").innerHTML = `<h3>Sender : ${jasonobj.sender}</h3>`
                }
                http.open("GET", "http://localhost:6363/message")
                http.send()
            }

            function query2()
            {
                let a = document.getElementById("num").value;
                let obj = {num:a};
                let http = new XMLHttpRequest();
                http.onload=function()
                {
                    let jsonobj = JSON.parse(http.response)
                    document.getElementById("p3").innerHTML = `<h3>Sqaure is = ${jsonobj.sqr}</h3>`
                }
                http.open("POST", "http://localhost:6363/square");
                http.setRequestHeader("Content-type", "application/json");
                http.send(JSON.stringify(obj))
            }
        </script>
    </head>
    <body>
        <button type="button" class="btn btn-dark" onclick="query()">GetMessage</button>
        <p id="p1"></p>
        <p id="p2"></p>
        <br>
        <input type="number" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" id="num"/>
        <button type="button" class="btn btn-danger" onclick="query2()">postobject</button>
        <p id="p3"></p>
    </body>
</html>